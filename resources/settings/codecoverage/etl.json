{
	"work_queue": {
		"name": "active-data-etl-dev",
		"$ref": "file://~/codecoverage.json#aws_credentials"
	},
	"param": {
		"threads": 1,
		"wait_forever": true,
		"keep_unknown_on_queue": true
	},
	"constants": {
		"pyLibrary.env.http.default_headers": {
			"Referer": "https://wiki.mozilla.org/Auto-tools/Projects/ActiveData",
			"User-Agent": "ActiveData-ETL"
		},
		"activedata_etl.transforms.pulse_block_to_test_result_logs.PARSE_TRY": true
	},
	"hg": {
		"use_cache": true,
		"hg": {
			"url": "https://hg.mozilla.org"
		},
		"branches": {
			"host": "http://localhost",
			"port": 9200,
			"index": "branches",
			"type": "branch",
			"timeout": 300,
			"consistency": "one",   // WE ONLY NEED ONE SHARD TO BE AVAILABLE
			"schema": {
				"$ref": "//../../schema/branch.json"
			},
			"debug": false,
			"limit_replicas": true
		},
		"repo": {
			"host": "http://localhost",
			"port": 9200,
			"index": "repo",
			"type": "revision",
			"timeout": 300,
			"consistency": "one",   // WE ONLY NEED ONE SHARD TO BE AVAILABLE
			"schema": {
				"$ref": "//../../schema/revision.json"
			},
			"debug": false,
			"limit_replicas": true
		}
	},
	"workers": [
		{
			"name": "gcov to codecoverage",
			"source": {
				"bucket": "active-data-task-cluster-normalized",
				"public": true,
				"key_format": "t.a:b",
				"$ref": "file://~/codecoverage.json#aws_credentials"
			},
			"destination": {
				"host": "http://localhost",
				"port": 9200,
				"index": "task_cluster",
				"type": "task_cluster_log",
				"timeout": 300,
				"schema": {
					"$ref": "//../../schema/pulse_logs.json"
				},
				"debug": true,
				"limit_replicas": true
			},
			"notify": {
			   "name": "active-data-index-dev",
			   "$ref": "file://~/private.json#aws_credentials"
		   	},
			"transformer": "activedata_etl.transforms.pulse_block_to_task_cluster.process",
			"type": "join"
		},
		{
			"name": "tc_pulse to codecoverage",
			"source": {
				"$ref": "file://~/codecoverage.json#aws_credentials",
				"bucket": "active-data-task-cluster-logger",
				"key_format": "t.a:b"
			},
			"destination": {
				"$ref": "file://~/codecoverage.json#aws_credentials",
				"bucket": "active-data-codecoverage-dev",
				"public": true,
				"key_format": "t.a:b.c.d"
			},
			"notify": {
				"name": "active-data-index-dev",
				"$ref": "file://~/codecoverage.json#aws_credentials"
			},
			"transformer": "activedata_etl.transforms.gcov_to_es.process",
			"type": "join"
		}
	],
	"debug": {
		"trace": true,
		"cprofile": {
			"enabled": false,
			"filename": "./results/profile.tab"
		},
		"log": [
			{
				"log_type": "console"
			},
			{
				"log_type": "email",
				"from_address": "",
				"to_address": "",
				"subject": "[ALERT][DEV] Problem in ETL",
				"$ref": "file://~/codecoverage.json#email"
			}
		]
	}
}
